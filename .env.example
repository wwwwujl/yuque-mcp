# Required for Yuque API access
YUQUE_TOKEN=replace_with_your_token

# Optional
YUQUE_ENDPOINT=https://www.yuque.com/api/v2/
YUQUE_TIMEOUT_MS=10000
YUQUE_MAX_RETRIES=2
YUQUE_ALLOW_WRITE=false
# Comma-separated namespaces allowed for write (repo/doc/toc), e.g. team/sandbox,team/test
YUQUE_WRITE_NAMESPACE_ALLOWLIST=
# Comma-separated group logins allowed for group write operations
YUQUE_WRITE_GROUP_ALLOWLIST=
YUQUE_ALLOW_DELETE=false
# Comma-separated namespaces allowed for delete, e.g. team/sandbox,team/test
YUQUE_DELETE_NAMESPACE_ALLOWLIST=
YUQUE_FILE_ROOT=.
YUQUE_FILE_MAX_BYTES=1048576
# Comma-separated extensions, with or without dot. Example: md,.txt
YUQUE_FILE_ALLOWED_EXTENSIONS=.md,.markdown,.txt
LOG_LEVEL=info
